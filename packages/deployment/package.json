{
  "name": "@speira/chordschart-deployment",
  "version": "0.1.0",
  "description": "Infrastructure as code using AWS CDK for chordschart",
  "bin": {
    "app": "bin/app.js"
  },
  "scripts": {
    "build": "tsc",
    "cdk": "cdk",
    "deploy:dev": "pnpm merge-schemas && cdk deploy",
    "deploy:prod": "pnpm merge-schemas && cdk deploy --context env=prod",
    "format": "prettier --write ./bin ./lib/ ./test/ && eslint --fix ./bin/ ./lib/ ./test/",
    "merge-schemas": "ts-node ./bin/mergeSchemas.ts",
    "synth": "pnpm merge-schemas && cdk synth",
    "test": "jest",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@speira/chordschart-api-chart": "workspace:*",
    "@speira/chordschart-contexts-chart": "workspace:*",
    "aws-cdk-lib": "2.215.0",
    "constructs": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "aws-cdk": "2.1033.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  }
}
